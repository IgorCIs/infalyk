include ./../../layouts/section.pug

-  
  const data = [
    {
      icon: 'icon-drone_icon',
      text: 'Cost-Effective Drone <br> LiDAR Data Processing System'
    },
    {
      icon: 'icon-lidar_icon',
      text: 'Uses off-the-shelf Components and Relies on advanced algorithms for High Quality Data Alignment'
    },
    {
      icon: 'icon-data-cloud_icon',
      text: 'Fine Data Alignment Process done on Cloud Computing Servers'
    },
    {
      icon: 'icon-process_icon',
      text: 'On-Board Alignment Process Handled by Raspberry Pi'
    },
    {
      icon: 'icon-data-alignment_icon',
      text: 'High Precision Data Alignment Algorithm with +/-5 cm error Map Output'
    },
    {
      icon: 'icon-mobile-platforms_icon',
      text: 'Algorithm can be customized for any professional mobile platforms - automobiles, drones, bikes or handheld'
    },
  ]

+section({title: 'LiDAR Now Features', className: 'grid-section homepage__utilize lidar__features'})
  .grid-section__wrapper
    - for(let i = 0; i < data.length; i++)
      - const alpha = i < 3 ? i : i - 3
      - const item = data[i]
        .grid-section__item(data-animation='fromOpacity' data-delay=`${alpha * 300}`)
          .grid-section__item__wrapper
            .grid-section__item__header-icon
              div(class=item.icon)
            .grid-section__item__text!=item.text