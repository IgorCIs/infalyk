include ./../../../layouts/section.pug

+section({ title: 'ADVANTAGES<br>FOR USERS', className: 'homepage__complex drone__advantages decorative-list', color: 'dark',})
  .decorative-list__wrapper.wrapper
    .decorative-list__text
      .decorative-list__title.title(data-animation='articleTitleLeft') Advantages to clients:
      ul.decorative-list__list.list(data-animation='articleTitleLeft' )
        each item in ['No full-time pilot cost,<br> training costs or hardware costs', ' Quick and easy drone based data collection', 'Convenient platform view data & pay pilots securely', 'Prices can be negotiated with pilots in different areas']
          li.list__item!=item

    .decorative-list__image(data-animation='articleTitleRight')
      include ./img/img1.svg


+section({ title: 'ADVANTAGES<br>FOR USERS', className: 'homepage__data-source drone__advantages-2 decorative-list decorative-list_reverse', color: 'dark' })
  .decorative-list__wrapper.wrapper
    .decorative-list__text
      .decorative-list__title.title(data-animation='articleTitleRight') Advantages to Pilots:
      ul.decorative-list__list.list(data-animation='articleTitleRight')
        each item in ['Pilots can utilize their skills for experience & income', 'Access to tasks uploaded in an area', 'Pilots bid for jobs & tasks in their area', 'Pilots can use in-app tools for flight planning & profile management',]
